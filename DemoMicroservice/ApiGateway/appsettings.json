{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 100,
      "WindowInMinutes": 1,
      "AutoReplenishment": true
    },
    "ApiEndpoints": {
      "PermitLimit": 200,
      "WindowInMinutes": 1,
      "QueueLimit": 10,
      "QueueProcessingOrder": "OldestFirst"
    },
    "RejectionStatusCode": 429
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YourSuperSecretKeyHere12345678901234567890",
    "Issuer": "YourIssuer",
    "Audience": "YourAudience"
  },
  "ReverseProxy": {
    "Routes": {
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/Products/{**catch-all}"
        }
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/Order/{**catch-all}"
        }
      },
      "orderdetail-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/OrderDetail/{**catch-all}"
        }
      },
      "basket-route": {
        "ClusterId": "basket-cluster",
        "Match": {
          "Path": "/api/Basket/{**catch-all}"
        }
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/Inventory/{**catch-all}"
        }
      },
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/Catalog/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "products-cluster": {
        "Destinations": {
          "products-destination": {
            "Address": "http://product-api:5001"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "order-destination": {
            "Address": "http://order-api:5003"
          }
        }
      },
      "basket-cluster": {
        "Destinations": {
          "basket-destination": {
            "Address": "http://basket-api:5004"
          }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "inventory-destination": {
            "Address": "http://inventory-api:5002"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "catalog-destination": {
            "Address": "http://catalog-api:5005"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://identity-api:5007"
          }
        }
      }
    }
  }
} 