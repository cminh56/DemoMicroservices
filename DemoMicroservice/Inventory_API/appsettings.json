{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "ThisIsASecureKeyWithAtLeast32Characters1234567890!",
    "Issuer": "https://localhost:5007",
    "Audience": "https://localhost:5007"
  },
  "ConnectionStrings": {
    "InventoryDB": "Host=inventory-db;Port=5432;Database=inventorydb;Username=postgres;Password=postgres"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5002",
        "Protocols": "Http1"
      },
      "gRPC": {
        "Url": "http://*:5006",
        "Protocols": "Http2"
      }
    },
    "Limits": {
      "MaxRequestBodySize": 16777216,
      "MaxResponseBodySize": 16777216
    }
  },
  "Grpc": {
    "EnableDetailedErrors": true,
    "MaxReceiveMessageSize": 16777216,
    "MaxSendMessageSize": 16777216
  }
}
